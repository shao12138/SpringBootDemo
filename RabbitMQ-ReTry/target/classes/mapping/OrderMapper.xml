<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tooi.demorabbitmqretry.mapper.OrderMapper">

    <resultMap type="com.tooi.demorabbitmqretry.entity.Order" id="TOrderMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="messageId" column="message_id" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TOrderMap">
        select
          id, name, message_id
        from demo-rabbitmq.t_order
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TOrderMap">
        select
          id, name, message_id
        from demo-rabbitmq.t_order
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TOrderMap">
        select
        id, name, message_id
        from demo-rabbitmq.t_order
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="messageId != null and messageId != ''">
                and message_id = #{messageId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO `demo-rabbitmq`.`t_order`(`id`, `name`, `message_id`) VALUES (#{id},#{name}, #{messageId});
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update demo-rabbitmq.t_order
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="messageId != null and messageId != ''">
                message_id = #{messageId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from demo-rabbitmq.t_order where id = #{id}
    </delete>

</mapper>